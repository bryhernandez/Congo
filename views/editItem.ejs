<body id = "back">
<nav>
  <center>
  <%- include ("partials/adminIcons.ejs") %>
  </center>
</nav>

<section>
  <div class="card text-center border-dark">
    <div class="card-body">

      <h3 style="text-align: center"> Update Item </h3>

      <form action="/item/edit" method="POST">

      <input type="hidden" name="itemId" value="<%= itemInfo[0].itemId %>">
        <label>Title:</label> <input type="text" class="form-control" name="title" value="<%= itemInfo[0].title %>" > <br>
        <label>Price:</label> <input type="text" class="form-control" value="<%= itemInfo[0].price %>" name="price" > <br>
        <label>Description:</label> <input class="form-control" name="description" value="<%= itemInfo[0].description %>"> </input> <br>
        <label>Image:</label> <input type="text" class="form-control" value="<%= itemInfo[0].image %>" name="image" > <br>
        <button>Update Item</button>
        
      </form>
    </div>
  </div>
  </section>
</body>
</html>