<body>
<%- include ("partials/logo.ejs") %>
<header>
  <h1> A Multitude of items </h1>
  <h1> Right at your fingertips! </h1>
</header>
  <br>

  <section>
    <div class="card">
      <div class="card-body">

        <h3 style="text-align: center"> Register for Congo today: </h3>

        <form action="/register" method="POST" autocomplete="off">
          <labeL>First Name:</label> <input type="text" class="form-control" placeholder="First Name" name="firstName" > <br>
          <label>Last Name:</label> <input type="text" class="form-control" placeholder="Last Name" name="lastName" > <br>
          <label>Email:</label> <input type="text" class="form-control" placeholder="Email" name="emailAddress" > <br>
          <label>Password:</label> <input type="password" class="form-control" placeholder="Password" name="passWord"> <br>
          <labeL>Phone:</label> <input type="text" class="form-control" placeholder="000-000-0000" name="phoneNumber" > <br>
          <label>Gender:</label> <input type="radio" value="male" name="gender"> <label>Male</label> <input type="radio" value="female" name="gender"> <label>Female</label> <br><br>
          <select class="form-select form-select-md mb-3" aria-label=".form-select-md">
            <option>Please Select a use for account</option>
            <option value="business">Business</option>
            <option value="personal">Personal</option>
          </select> <br><br>
          <button class="btn btn-warning"> Register </button>
          
        </form>
      </div>
    </div>
  </section>

  <h3 id="errorMessage" style="color:red"> <%= error %></h3>

  <script src="js/functions.js">
</script>
</body>
</html>